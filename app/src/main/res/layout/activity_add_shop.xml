<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.AddShopActivity">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grocy"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="store partner"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorHeading"
        android:layout_marginStart="70dp"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <View
            android:layout_width="25dp"
            android:layout_height="10dp"
            android:background="@drawable/custom_tab_layout1"/>

        <View
            android:layout_width="25dp"
            android:layout_height="10dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/custom_tab_layout" />

    </LinearLayout>



    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reg_shopName"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_corner"
                android:drawableStart="@drawable/icon_shop"
                android:drawablePadding="14dp"
                android:gravity="center_vertical"
                android:hint="Shop name"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:textColor="#659BF6"
                android:textColorHint="#9DC0F9"
                android:textSize="22sp"

                android:textStyle="bold" />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reg_shop_category"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_corner"
                android:drawableStart="@drawable/icon_category"
                android:drawablePadding="14dp"
                android:gravity="center_vertical"
                android:hint="Shop Category"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:textColor="#659BF6"
                android:textColorHint="#9DC0F9"
                android:textSize="22sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reg_gst_number"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_corner"
                android:drawableStart="@drawable/icon_document"
                android:drawablePadding="14dp"
                android:gravity="center_vertical"
                android:hint="GSTIN Number"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:textColor="#659BF6"
                android:textColorHint="#9DC0F9"
                android:textSize="22sp"
                android:textStyle="bold" />


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reg_shop_address"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_corner"
                android:drawableStart="@drawable/icon_address"
                android:drawablePadding="14dp"
                android:gravity="center_vertical"
                android:hint="Shop Address"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:textColor="#659BF6"
                android:textColorHint="#9DC0F9"
                android:textSize="22sp"
                android:textStyle="bold" />


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reg_city_name"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_corner"
                android:drawableStart="@drawable/icon_city"
                android:drawablePadding="14dp"
                android:gravity="center_vertical"
                android:hint="City"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:textColor="#659BF6"
                android:textColorHint="#9DC0F9"
                android:textSize="22sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reg_state"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_corner"
                android:drawableStart="@drawable/icon_state"
                android:drawablePadding="14dp"
                android:gravity="center_vertical"
                android:hint="State"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:textColor="#659BF6"
                android:textColorHint="#9DC0F9"
                android:textSize="22sp"
                android:textStyle="bold" />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reg_pin_code"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_corner"
                android:drawableStart="@drawable/icon_pin_code"
                android:drawablePadding="14dp"
                android:gravity="center_vertical"
                android:hint="Pin code"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:textColor="#659BF6"
                android:textColorHint="#9DC0F9"
                android:textSize="22sp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reg_next"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="Next"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="12dp"
                app:cornerRadius="8dp"
                android:layout_marginEnd="24dp"
                android:textColor="@color/white"/>


        </LinearLayout>


    </ScrollView>


</LinearLayout>