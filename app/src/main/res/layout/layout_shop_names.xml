<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/shop_letter_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/shop_change_back" />

        <TextView
            android:id="@+id/shop_letter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/shop_letter_back"
            android:layout_alignTop="@+id/shop_letter_back"
            android:layout_alignEnd="@+id/shop_letter_back"
            android:layout_alignBottom="@+id/shop_letter_back"
            android:paddingStart="10dp"
            android:text="A"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10sp"
            android:layout_toEndOf="@+id/shop_letter"
            android:text="Hdkjhasjkhd"
            android:textSize="20sp" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>